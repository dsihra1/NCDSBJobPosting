@model IEnumerable<CommunityProject_ProjectUnity.Models.Application>

@{
    ViewBag.Title = "Applications List";
}
<link href="@Url.Content("~/Content/themes/base/jquery-ui.css")" 

              rel="stylesheet" type="text/css" media="all" />
        <link href="@Url.Content("~/Content/themes/smoothness/jquery-ui-1.7.2.custom.css")" 

              rel="stylesheet" type="text/css" media="all" />
        <script src="@Url.Content("~/Scripts/jquery-1.4.4.min.js")" 

              type="text/javascript"></script>
       
        <script src="@Url.Content("~/Scripts/jquery.jeditable.js")" 

              type="text/javascript"></script>
        <script src="@Url.Content("~/Scripts/jquery-ui.js")" 

              type="text/javascript"></script>
        <script src="@Url.Content("~/Scripts/jquery.validate.js")" 

              type="text/javascript"></script>
        <script src="@Url.Content("~/Scripts/jquery.dataTables.editable.js")" 

              type="text/javascript"></script>
<link href="//cdn.datatables.net/1.10.16/css/jquery.dataTables.min.css" rel="stylesheet" />
<script src="//cdn.datatables.net/1.10.16/js/jquery.dataTables.min.js"></script>
<div class="row">
   
        <div class="panel panel-primary list-panel" id="list-panel">
            <div class="panel-heading list-panel-heading">
                <h1 class="panel-title list-panel-title">Applications</h1>
            </div>
            <div class="well">
                <div class="panel-body">
                    <table id="applications-data-table"
                           class="table table-striped table-bordered"
                           style="width:100%">
                        <thead>
                            <tr>
                                <th>Applicant Name</th>
                                <th>Posting Name</th>
                                <th>Comments</th>
                                <th>Closing Date</th>

                                <th>View More Details</th>
                                <th>Edit</th>
                                <th>Download Application</th>

                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                            <tr>
                                <td>@item.Applicant.FormalName</td>
                                <td>@item.Posting.Name</td>
                                <td>@item.Comments</td>
                                <td>@item.Posting.ClosingDate</td>
                                


                                <td>
                                    @Html.ActionLink("Details", "Details", "Applications", new { id = item.ID }, null)

                                </td>
                                <td>
                                    @Html.ActionLink("Edit", "Edit", "Applications", new { id = item.ID }, null)
                                </td>
                                <td>
                                    @Html.ActionLink("Download", "PrintPDF", new { id = item.ID })
                                </td>
                            </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
  
</div>
 @section Scripts
{
            <script type="text/javascript">
                $(function () {
                    $('#applications-data-table').DataTable({
                        "pageLength": 50,
                        language: {
                            searchPlaceholder: "Type here to Search"
                        }
                    });
                });
            </script>
        }

    