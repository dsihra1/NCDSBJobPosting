@model IEnumerable<CommunityProject_ProjectUnity.Models.Application>
@{
    ViewBag.Title = "Selected Applications";
}

<link href="//cdn.datatables.net/1.10.16/css/jquery.dataTables.min.css" rel="stylesheet" />
<script src="//cdn.datatables.net/1.10.16/js/jquery.dataTables.min.js"></script>

<h2>Selected Applications</h2>


<div class="container-fluid">
    <div class="col-md-12">
        <table id="dataTable" class="table table-striped table-bordered nowrap" cellspacing="0">
            <thead>
                <tr>
                    <th>Applicant Name</th>
                    <th>Job Posting</th>
                    <th>Posting Closing Date</th>
                    <th>Schools</th>
                    <th>FTE</th>
                    <th>Salary</th>
                    <th>Openings</th>
                   
                </tr>
            </thead>
            <tbody>
                @foreach (var app in Model)
                {
                    <tr>
                        <td>@app.Applicant.FullName</td>
                        <td>@app.Posting.Name</td>
                        <td>@app.Posting.ClosingDate</td>
                        <td>
                            @foreach (var school in app.Posting.Schools)
                            {
                                @school.Name<br />
                            }


                        </td>

                        
                        <td>@app.Posting.FTE</td>
                        <td>@app.Posting.Salary</td>
                        <td>@app.Posting.Openings</td>
                        
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
        

@section Scripts
{
    <script type="text/javascript">
        $(document).ready(function () {
            $('#dataTable').DataTable({
                "pageLength": 50,
                language: {
                    searchPlaceholder: "Type here to Search"
                }

            });
        });
    </script>
}

