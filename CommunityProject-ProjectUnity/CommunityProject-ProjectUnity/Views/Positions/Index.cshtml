@model IEnumerable<CommunityProject_ProjectUnity.Models.Position>

@{
    ViewBag.Title = "Positions List";
}

<h2>Positions</h2>
<link href="@Url.Content("~/Content/themes/base/jquery-ui.css")" 

              rel="stylesheet" type="text/css" media="all" />
        <link href="@Url.Content("~/Content/themes/smoothness/jquery-ui-1.7.2.custom.css")" 

              rel="stylesheet" type="text/css" media="all" />
        <script src="@Url.Content("~/Scripts/jquery-1.4.4.min.js")" 

              type="text/javascript"></script>
       
        <script src="@Url.Content("~/Scripts/jquery.jeditable.js")" 

              type="text/javascript"></script>
        <script src="@Url.Content("~/Scripts/jquery-ui.js")" 

              type="text/javascript"></script>
        <script src="@Url.Content("~/Scripts/jquery.validate.js")" 

              type="text/javascript"></script>
        <script src="@Url.Content("~/Scripts/jquery.dataTables.editable.js")" 

              type="text/javascript"></script>
<link href="//cdn.datatables.net/1.10.16/css/jquery.dataTables.min.css" rel="stylesheet" />

<p>
    @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-primary" })
</p>
<div class="row">
   
        <div class="panel panel-primary list-panel" id="list-panel">
            <div class="panel-heading list-panel-heading">
                <h1 class="panel-title list-panel-title">Positions</h1>
            </div>
            <div class="well">
                <div class="panel-body">
                    <table id="positions-data-table"
                           class="table table-striped table-bordered"
                           style="width:100%">
                        <thead>
                            <tr>
                                <th>Position Type</th>
                                <th>Job Code</th>
                                <th>Name</th>
                                <th>Salary</th>
                                <th>Edit Position</th>
                                <th>View More Details</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var position in Model)
                            {
                                <tr>
                                    <td>@position.PositionType</td>
                                    <td>@position.JobCodeName</td>
                                    <td>@position.Name</td>
                                    <td>$@position.PositionSalary</td>
                                    
                                    <td>
                                        @Html.ActionLink("Edit", "Edit", "Positions", new { id = position.ID }, null)

                                    </td>
                                    <td>
                                        @Html.ActionLink("Details", "Details", "Positions", new { id = position.ID }, null)

                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
  
</div>
 @section Scripts
{
            <script type="text/javascript">
                $(function () {
                    $('#positions-data-table').DataTable({

                        "pageLength": 50,
                        language: {
                            searchPlaceholder: "Type here to Search"
                        }
                    });
                });
            </script>
        }